<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimens10dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimens18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dimens10dp"
            android:layout_marginRight="@dimen/dimens10dp"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/contain_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimens20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="@dimen/dimens20dp"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/dimens18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimens10dp"
        android:layout_marginTop="@dimen/dimens10dp"
        android:gravity="center">

        <Button
            android:id="@+id/positive_btn_dia"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginEnd="@dimen/dimens10dp"
            android:layout_marginRight="@dimen/dimens10dp"
            android:background="@drawable/selector_flat_btn_positive"
            android:text="yes"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimens18sp" />

        <Button
            android:id="@+id/negative_btn_dia"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="@dimen/dimens10dp"
            android:layout_marginStart="@dimen/dimens10dp"
            android:background="@drawable/selector_flat_btn_negative"
            android:text="no"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimens18sp" />
    </LinearLayout>


</LinearLayout>