<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_add_product_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginbackground"
    tools:context=".AddProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimens10dp"

        android:orientation="vertical">

        <AutoCompleteTextView
            android:id="@+id/txt_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/rounded_edittext_for_user_setting"
            android:digits="AaBbCcDdEeFfGgHhIiJjKkLlMmNnOoPpQqRrSsTtUuVvWwXxYyZz"
            android:text="Item Name"
            android:inputType="textCapWords"
            android:padding="5dp"
            android:textColor="@color/colorPrimary"
            android:singleLine="true"
            android:textAlignment="inherit"
            android:textColorHint="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/etx_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/dimens10dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/rounded_edittext_for_user_setting"
            android:text="Qauntity"
            android:textColor="@color/colorPrimary"
            android:padding="5dp" />

        <EditText
            android:id="@+id/etx_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/dimens10dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/rounded_edittext_for_user_setting"
            android:text="Price"
            android:textColor="@color/colorPrimary"
            android:padding="5dp" />

        <EditText
            android:id="@+id/etx_gst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/dimens10dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/rounded_edittext_for_user_setting"
            android:text="Gst"
            android:textColor="@color/colorPrimary"
            android:padding="5dp" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginTop="@dimen/dimens15dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_add_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="60dp"
                android:padding="5dp"
                android:text="Add"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/roudedcornerbuttonwithwhitecolor"
                android:textSize="@dimen/dimens18sp" />

            <Button
                android:id="@+id/btn_clear_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="@dimen/dimens20dp"
                android:layout_toRightOf="@+id/btn_add_item"
                android:padding="5dp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/roudedcornerbuttonwithwhitecolor"
                android:text="Clear"
                android:textAllCaps="false"
                android:textSize="@dimen/dimens18sp" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>