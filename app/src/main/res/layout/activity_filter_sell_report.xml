<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilterSellReport">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F5F5F5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginBottom="@dimen/dimens20dp"

        android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:elevation="16dp"
        android:layout_margin="@dimen/dimens10dp"
        android:layout_marginTop="@dimen/dimens20dp"
        android:background="@color/light_gray"
        tools:ignore="MissingConstraints">
        <EditText
            android:id="@+id/etx_filter_date"
           android:padding="@dimen/dimens10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date"
            android:enabled="false"
            android:inputType="none"
            android:textSize="@dimen/dimens18sp"
            />
        <EditText
            android:id="@+id/etx_filter_name"
            android:padding="@dimen/dimens10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:enabled="false"
            android:inputType="none"
            android:textSize="@dimen/dimens18sp"
            />
        <EditText
            android:id="@+id/etx_filter_name1"
            android:padding="@dimen/dimens10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:enabled="false"
            android:inputType="none"
            android:textSize="@dimen/dimens18sp"
            />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/additemlinearlayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:elevation="8dp"
            android:layout_margin="@dimen/dimens10dp"
           >

            <EditText
                android:id="@+id/etx_date_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date Picker"
                android:inputType="none"
                android:padding="@dimen/dimens10dp"
                android:textSize="@dimen/dimens18sp" />

            <EditText
                android:id="@+id/etx_filter_customer_name"
                android:padding="@dimen/dimens10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Customer Name"
                android:inputType="none"
                android:textSize="@dimen/dimens18sp"
                />
            <EditText
                android:id="@+id/etx_filter_customer_name1"
                android:padding="@dimen/dimens10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Customer Name"
                android:inputType="none"
                android:textSize="@dimen/dimens18sp"
                />
            <Button
                android:id="@+id/bt_filter_apply"
                android:padding="@dimen/dimens10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apply"
                android:layout_marginTop="@dimen/dimens100dp"
                android:background="@drawable/roundedbutton"
                android:textColor="@color/white_color"
                android:inputType="none"
                android:textSize="@dimen/dimens18sp"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>